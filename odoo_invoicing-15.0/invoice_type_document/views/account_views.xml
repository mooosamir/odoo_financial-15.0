<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_invoice_type_doc_form_view_inherit" model="ir.ui.view">
        <field name="name">account.move.form.view.inherit.invoice_type_doc</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//tree/field[@name='account_id']"
                   position="after">
                <field name="serie_correlative_is_readonly" invisible="1"/>
                <field name="l10n_latam_document_type_id" attrs="{'readonly': [('serie_correlative_is_readonly', '=', True)]}" optional="hide"/>
                <field name="serie_correlative" attrs="{'readonly': [('serie_correlative_is_readonly', '=', True)]}" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']//tree/field[@name='name']" position="before">
                <field name="serie_correlative_is_readonly" invisible="1"/>
                <field name="move_type" invisible="1"/>
                <field name="l10n_latam_document_type_id" attrs="{'required': [('move_type', '!=', 'entry')], 'readonly': [('serie_correlative_is_readonly', '=', True)]}" optional="hide"/>
                <field name="serie_correlative" attrs="{'readonly': [('serie_correlative_is_readonly', '=', True)]}" optional="hide"/>
            </xpath>

        </field>
    </record>

    <record id="account_move_line_tree_grouped_invoice_type_doc_form_view_inherit" model="ir.ui.view">
        <field name="name">account.move.line.tree.grouped.view.inherit.invoice_type_doc</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='debit']" position="before">
                <field name="l10n_latam_document_type_id" optional="hide"/>
                <field name="serie_correlative" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="account_move_line_tree_invoice_type_doc_form_view_inherit" model="ir.ui.view">
        <field name="name">account.move.line.tree.view.inherit.invoice_type_doc</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_maturity']" position="before">
                <field name="l10n_latam_document_type_id" optional="hide"/>
                <field name="serie_correlative" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>